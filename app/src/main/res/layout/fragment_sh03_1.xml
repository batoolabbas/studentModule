<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:minWidth="800dp"
    android:layout_height="fill_parent" tools:context="SH03.SH03_1"
    android:fillViewport="true"
    android:focusable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="SH03.SH03_1"
        android:background="@color/backgroundcolor">

        <!-- TODO: Update blank fragment layout -->

        <View
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@color/weekdaycolor"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp"
            android:id="@+id/view7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Are you going to register it?"
            android:id="@+id/textView17"
            android:gravity="center_vertical|center_horizontal"
            android:minLines="2"
            android:textColor="@color/sunday"
            android:layout_below="@+id/view7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/sh03_1NoButton"
            android:layout_below="@+id/textView17"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:textColor="@color/white"
            android:background="@drawable/circular_button_purple" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/sh03_1YesButton"
            android:layout_marginRight="35dp"
            android:layout_below="@+id/textView17"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:background="@drawable/circular_button_purple" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sh03_1PlayButton"
            android:layout_alignTop="@+id/view7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/playbtn_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Listen"
            android:id="@+id/textView18"
            android:layout_below="@+id/sh03_1PlayButton"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

</ScrollView>